@model IEnumerable<Projet.Models.Location>

@{
    ViewBag.Title = "Index";
}
@if (Request.IsAuthenticated)
{
    <h2>Les locations</h2>

    <p>
        @Html.ActionLink("Ajouter une Location", "Create")
    </p>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Agence.Ville)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Client.Nom)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Vehicule.Marque)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DateDebut)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DateFin)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Prix)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Agence.Ville)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Client.Nom)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Vehicule.Marque)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DateDebut)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DateFin)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Prix)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.IdLocation }) |
                    @Html.ActionLink("Details", "Details", new { id = item.IdLocation }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.IdLocation })
                </td>
            </tr>
        }

    </table>
}
else
{
    <p><h2>Veuillez-Vous connecter pour voir le contenu de cette page!</h2></p>
    @Html.ActionLink("Se connecter", "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink" })
}